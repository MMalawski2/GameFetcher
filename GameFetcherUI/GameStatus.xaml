<Window x:Class="GameFetcherUI.GameStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameFetcherUI"
        mc:Ignorable="d"
        Title="{Binding Name}" Height="148.171" Width="215.549">
    <Grid>
        <StackPanel Margin="10">
            <Label FontWeight="Bold">Game Status:</Label>
            <RadioButton Checked="ChangeStatus" Name="a">Not Played</RadioButton>
            <RadioButton Checked="ChangeStatus" Name="aa">Played</RadioButton>
            <RadioButton Checked="ChangeStatus" Name="aaa">Playing Now</RadioButton>


            <Button Content="Apply Changes" Click="ApplyChanges"></Button>
        </StackPanel>

    </Grid>
</Window>
